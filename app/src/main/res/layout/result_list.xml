<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/cardViewResultCite"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/works_cited"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/google_fonts"
            android:layout_centerHorizontal="true"
            android:id="@+id/work_citedTextView"
            android:layout_marginTop="8dp"/>

        <TextView
            android:padding="40dp"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:fontFamily="@font/times_new_roman"
            android:layout_height="150dp"
            android:textColor="@color/textBlack"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:lines="10"
            android:id="@+id/citedResult"
            android:layout_below="@+id/work_citedTextView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in_text_textView"
            android:text="@string/in_txt_citation"
            android:layout_below="@id/btn_copy"
            android:textColor="@color/textBlack"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/google_fonts"
            android:layout_marginTop="8dp"/>

        <TextView
            android:padding="40dp"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/in_text_textView"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:id="@+id/intextCitationResult"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/times_new_roman"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_to_clipboard"
            android:id="@+id/btn_copy"
            android:layout_below="@+id/citedResult"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_to_clipboard"
            android:id="@+id/btn_copy2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/intextCitationResult"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>