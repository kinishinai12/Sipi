<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewParent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="source"
            android:textColor="@color/textBlack"
            android:textStyle="bold"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:id="@+id/imageStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sourceName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/citationStyleTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageStyle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Citation Style"
            android:textColor="@color/textBlack"/>

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/citationStyleTextview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:text="Version"
            android:textColor="@color/textBlack" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>